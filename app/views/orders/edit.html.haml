%div.center
  %h1 Edit order

  .span6.center
  =simple_form_for @order, url: user_order_path , method: 'patch',  html: { class: 'form-horizontal '} do |f|
    First Course
    %h3=f.select :first_course, @items1.pluck(:name)
    Main course
    %h3=f.select :main_course, @items2.pluck(:name)
    Drink
    %h3=f.select :drink,  @items3.pluck(:name)

    %br/
    %br/
    %br/
    =f.button :submit

  %h3= link_to 'Cancel', root_path