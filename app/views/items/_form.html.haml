.span6.center
  =simple_form_for @item, html: { class: 'form-horizontal '} do |f|
    = render 'shared/error_messages' , object: f.object
    =f.input :name, label: "Name", input_html: {class: 'form-control'}
    =f.input :price, label: "Price", input_html: {class: 'form-control'}
    =f.input :description, label: "Desciption", input_html: {class: 'form-control'}
    =f.select :category, Category: ["First course", "Main course", "Drink"]
    =f.hidden_field :a_day_of_week, value: Date.today
    %br/
    %br/
    %br/
    =f.button :submit, input_html: {class: 'btn-lg'}