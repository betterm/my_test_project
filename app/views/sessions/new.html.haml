%div.center
  %h1 Sign in

.span6.center
  =simple_form_for :sessions, url: sessions_path,  html: { class: 'form-horizontal '} do |f|
    =f.input :email, label: "E-mail", input_html: {class: 'form-control'}
    =f.input :password, label: "Password", input_html: {class: 'form-control'}

    %br/
    =f.button :submit, "Sign in" , input_html: {class: 'btn-lg'}

%div.center
  %h2
    New user?
    =link_to "Sign up now!", signup_path

