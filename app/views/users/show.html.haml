#user
  %div.center
    %h2 User:
    %p Name: #{@user.name}

    %p E-mail: #{@user.email}

    Last order: Orderâ„– #{link_to  @user.orders.last.id, user_order_path(@user, id: @user.orders.last.id) if @user.orders.last}

    %div.center
    %h2
      %p Orders:
    - @user.orders.each do |o|
      %p _________________
      %p Items: #{link_to o.first_course, item_path(o.first_course)}, #{link_to o.main_course, item_path(o.main_course)},  #{link_to o.drink, item_path(o.drink)}
      %p Time: #{ o.created_at.strftime('%A %d %m')}
      Order â„– #{link_to o.id, user_order_path(@user, id: o.id)}
      %br/



    %div.center
    %h2
      = link_to 'Edit user', edit_user_path
      - if current_user.admin || current_user
        %br/
        %br/
        = link_to 'All orders', user_orders_path(user_id: @user.id)